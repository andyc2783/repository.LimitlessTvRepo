<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.program.LimitlessTvWiz" name="Limitless Tv Wizard" version="2.0" provider-name="LImitless Tv ">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="startup.py" start="startup" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Limitless Tv Wizard</summary>
    <description lang="en">Limitless Tv Wizard allows you to get access to the latest Limitless Tv Custom Builds.</description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="plugin.video.LimitlessV3"
       name="Limitless [COLOR blue]V3[/COLOR]"
       version="1.0"
       provider-name="sClarke">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
	<import addon="script.module.requests" />
  </requires>
  <extension point="xbmc.python.pluginsource"
            library="default.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">LimitlessV3</summary>
    <language>en</language>
    <description lang="en">LimitlessV3 Official Addon - Supplier of Great Quality and Stable Streams</description>
     <platform>all</platform>
  </extension>
</addon>

